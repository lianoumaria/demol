Metadata
    name: "Scenario1"
    description: "My RaspberryPi 5 with increasing number of TCRT5000 tracker sensors."
    author: "maria"
    os: Raspbian
end

Components
    board: RaspberryPi_5_8GB
    peripherals:
        - TCRT5000(Tracker1)
        /*- TCRT5000(Tracker2)
        - TCRT5000(Tracker3)
        - TCRT5000(Tracker4)
        - TCRT5000(Tracker5)
        - TCRT5000(Tracker6)
        - TCRT5000(Tracker7)
        - TCRT5000(Tracker8)
        - TCRT5000(Tracker9)
        - TCRT5000(Tracker10)
        - TCRT5000(Tracker11)
        - TCRT5000(Tracker12)*/
end

Network
    ssid: "Wifi_2.4GHz"
    passwd: "guest"
end

Broker<MQTT> locsys_broker
    host: "locsys.issel.ee.auth.gr"
    port: 1883
    ssl: False
    auth:
        username: "sensors"
        password: "issel.sensors"
end

Connection
    peripheral: Tracker1
    powerConnections:
        - GND_1 -- GND
        - power_5v_a -- VCC
    ioConnections:
        - type: gpio
          name: digitalIN
          pin:
              GPIO4 -- D0
    endpoint:
        type: Publisher
end
