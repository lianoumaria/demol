Metadata
    name: "RpiTrackerSensor"
    description: "My RaspberryPi 5 with a TCRT5000 tracker sensor"
    author: "maria"
    os: Raspbian
end

Components
    board: RaspberryPi_5_8GB
    peripherals:
        - TCRT5000(MyTracker)
end

Network
    ssid: "Wifi_2.4GHz"
    passwd: "guest"
end

Broker<MQTT> MyBroker
    host: "node.mqtt.local"
    port: 1883
    ssl: False
    auth:
        username: "sensors"
        password: "sensors"
end

Connection
    peripheral: MyTracker
    powerConnections:
        - GND_1 -- GND
        - power_5v_a -- VCC
    ioConnections:
        - type: gpio
          name: digitalIN
          pin:
              GPIO4 -- D0
    endpoint:
        topic: "my_raspi.sensors.tracker.TCRT5000"
        type: Publisher
end

    
        