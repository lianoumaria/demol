Metadata
    name: "MyPiIotDevice"
    description: "My RaspberryPi IoT device"
    author: "klpanagi"
    os: Raspbian
end

Components
    board: RaspberryPi_4B_4GB
    peripherals:
        - BME680(MyBME)
end

Network
    ssid: "Wifi_2.4GHz"
    passwd: "guest"
end

Broker<MQTT>
    host: "node.mqtt.local"
    port: 1883
    ssl: false
    auth:
        username: "guest"
        password: "guest"
end

Connection
    peripheral: MyBME
    powerConnections:
        - gnd_1 -- gnd
        - power_5v -- vcc
    ioConnections:
        - type: i2c
          slave_address: 0x76
          pins:
              sda: p_21 -- sda
              scl: p_22 -- scl
    endpoint:
        topic: "my_esp.sensors.env.bme680"
        type: Publisher
end
