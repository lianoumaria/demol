Metadata
    name: "ParkingSensor"
    description: "Device for distance sensing"
    author: "maria"
    os: Raspbian
end

Components
    board: RaspberryPi_5_8GB
    peripherals:
        - SRF05(ParkingDistance)
end

Network
    ssid: "Wifi_2.4GHz"
    passwd: "guest"
end

Broker<MQTT> locsys_broker
    host: "locsys.issel.ee.auth.gr"
    port: 1883
    ssl: False
    auth:
        username: "sensors"
        password: "issel.sensors"
end

Connection
    peripheral: ParkingDistance
    powerConnections:
        - GND_1 -- GND
        - power_5v_a -- VCC
    ioConnections:
        - type: gpio
          name: echo
          pin:
              GPIO24 -- echo
        - type: gpio
          name: trigger
          pin:
              GPIO23 -- trigger
    endpoint:
        type: Publisher
    settings:
        - frequency: float = 20.0
end