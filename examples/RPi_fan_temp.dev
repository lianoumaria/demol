Metadata
    name: "RpiFan"
    description: "My RaspberryPi 5 with a BME680 and a ServoMotor"
    author: "maria"
    os: Raspbian
end

Components
    board: RaspberryPi_5_16GB
    peripherals:
        - BME680(TempSensor)
        - PCA9685(FanController)
end

Network
    ssid: "Wifi_2.4GHz"
    passwd: "guest"
end

Broker<MQTT> locsys_broker
    host: "locsys.issel.ee.auth.gr"
    port: 8883
    ssl: true
    auth:
        username: "r4a"
        password: "r4a123$"
end

Connection
    peripheral: TempSensor
    powerConnections:
        - GND_1 -- GND
        - power_5v_a -- VCC
    ioConnections:
        - type: i2c
          name: env_data
          slave_address: 0x76
          pins:
            sda: GPIO2 -- sda
            scl: GPIO3 -- scl
    endpoint:
        type: Publisher 
end

Connection
    peripheral: FanController
    powerConnections:
        - GND_2 -- GND_1
        - power_5v_b -- VCC_1
    ioConnections:
        - type: i2c
          name: pca_control
          slave_address: 0x64
          pins:
            sda: GPIO2 -- SDA_1
            scl: GPIO3 -- SCL_1
    endpoint:
        type: Subscriber
    settings:
        - channel : int = 2
        - initial_angle : float = 0.0
        - final_angle : float = 0.0
        - angular_speed : float = 0.0
end