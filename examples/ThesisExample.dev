Metadata
    name: "my_raspi"
    description: "My Embedded Device"
    author: "maria"
    os: Raspbian
end

Components
    board: RaspberryPi_5_16GB
    peripherals:
        - SRF05(MySRF)
        - WS2812(MyLedRing)
end

Network
    ssid: "Wifi_2.4GHz"
    passwd: "guest"
end

Broker<MQTT> MyBroker
    host: "localhost"
    port: 1883
    ssl: False
    auth:
        username: "guest"
        password: "guest"
end

Connection
    peripheral: MySRF
    powerConnections:
        - GND_1 -- GND
        - power_5v_a -- VCC
    ioConnections:
        - type: gpio
          name: echo
          pin:
              GPIO24 -- echo
        - type: gpio
          name: trigger
          pin:
              GPIO23 -- trigger
    endpoint:
        type: Publisher
end

Connection
    peripheral: MyLedRing
    powerConnections:
        - GND_2 -- GND
        - power_5v_b -- VCC
    ioConnections:
        - type: gpio
          name: LedControl
          pin: GPIO10 -- DIN
    endpoint:
        type: Subscriber
    settings:
        - colors: list = ['0xFF0000', '0x00FF00', '0x0000FF', '0xFFFF00', '0xFF00FF', '0x00FFFF', '0xFFFFFF', '0x800000', '0x008000', '0x000080', '0xFFA500', '0x800080']
end