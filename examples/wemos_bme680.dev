Metadata
    name: "MyWemos"
    description: "My WemosD1Mini IoT device"
    author: "klpanagi"
end

Network
    ssid: "Wifi_2.4GHz"
    passwd: "guest"
end

Broker<MQTT>
    host: "node.mqtt.local"
    port: 1883
    auth:
        username: "guest"
        password: "guest"
end

Components
    board: WemosD1Mini
    peripherals:
        - BME680(BME)
end

Connection
    peripheral: BME
    powerConnections:
        - gnd_1 -- gnd
        - power_5v -- vcc
    ioConnections:
        - type: i2c
          slave_address: 0x78
          pins:
              sda: d2 -- sda
              scl: d1 -- scl
    endpoint:
        topic: "my_wemos.actuators.visual.ledstrip"
end
